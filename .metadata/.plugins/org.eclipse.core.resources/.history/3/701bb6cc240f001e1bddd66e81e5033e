<script src="/js/jquery.min.js">
	$(document).ready(function(){
		$("#fname").blur(function(){
			var firstname=$('#fname').val();
			alert(firstname);
			$.ajax({url: "demo_test.txt", success: function(result){
			    $("#div1").html(result);
			  }});
		});
	});
</script>
